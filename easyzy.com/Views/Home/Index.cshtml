@{
    ViewBag.Title = "易作业-超级简单、方便的作业助手";
}
@section css
{ 
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/tool.css" />
}
<div class="slider">
    @*<div class="pic-field">
        <img src="/Images/boshimao.png" width="400" />
    </div>*@
    <div id="myCarousel" class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Carousel items -->
        <div class="carousel-inner">
            <a class="active item" href="javascript:void(0);"><img src="/Images/banner/banner1.jpg" alt="" /></a>
            <a class="item" href="javascript:void(0);"><img src="/Images/banner/banner2.jpg" alt="" /></a>
            <a class="item" href="javascript:void(0);"><img src="/Images/banner/banner3.jpg" alt="" /></a>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
</div>
<div class="content">
    <div class="main-content">
        <div class="func-field">
            <div class="func left">
                <a href="/zy/add"><img src="/Images/index1.jpg" /></a>
                <p class="funcname">新建作业</p>
                <p>教师通过Word上传作业</p>
            </div>
            <div class="func left">
                <a href="/zy/open"><img src="/Images/index2.jpg" /></a>
                <p class="funcname">做作业</p>
                <p>学生通过作业编码，查看/提交作业</p>
            </div>
            <div class="func left">
                <a href="/zy/query"><img src="/Images/index3.jpg" /></a>
                <p class="funcname">查看作业</p>
                <p>查看每个人的答题信息</p>
            </div>
        </div>
    </div>
</div>

@section scriptfirst
{
    <script src="~/Scripts/bootstrap.min.js"></script>
}
<script type="text/javascript">
    //banner轮播图
    $(function () {
        $('.carousel').carousel({
            interval: 3000
        });
    })
    
</script>
