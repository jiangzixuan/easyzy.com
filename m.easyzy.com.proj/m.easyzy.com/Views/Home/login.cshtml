@{
    ViewBag.Title = "易作业移动端-已做作业";
}
<div class="content-wrap">
    <div class="ulogin" style="margin-top:80px;">
        <input class="uinput username" placeholder="用户名"  />
    </div>

    <div class="ulogin" style="margin-top:40px;">
        <input class="uinput password" type="password" placeholder="密码" />
    </div>

    <div class="ubtn">
        登 录
    </div>
</div>
<script type="text/javascript">
    $(".neckcontent .funcname").html("登录");
    $(".ubtn").on("click", function () {
        var username = $(".username").val();
        var psd = $(".password").val();

        $.post("UserLogin",
            { userName: username, passWord: psd },
            function (data) {
                if (data == "0") {
                    window.location.href = "/";
                }
                else {
                    dialogAlert("用户名或密码错误！");
                }
            })
    })
</script>